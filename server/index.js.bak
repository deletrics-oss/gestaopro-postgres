};

// Fun√ß√£o gen√©rica para buscar registro por ID
const getRecord = (tableName) => async (req, res) => {
  try {
    const { id } = req.params;
    const result = await pool.query(`SELECT * FROM ${tableName} WHERE id = $1`, [id]);
    
    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Registro n√£o encontrado' });
    }
    
    res.json(result.rows[0]);
  } catch (error) {
    console.error(`Erro ao buscar ${tableName}:`, error);
    res.status(500).json({ error: `Erro ao buscar registro de ${tableName}` });
  }
};

// Fun√ß√£o gen√©rica para criar registro
const createRecord = (tableName) => async (req, res) => {
  try {
    const data = req.body;
    
    // Filtrar campos undefined, null e vazios
    const filteredData = Object.entries(data)
      .filter(([_, value]) => value !== undefined && value !== null && value !== '')
      .reduce((obj, [key, value]) => ({ ...obj, [key]: value }), {});
    
    if (Object.keys(filteredData).length === 0) {
      return res.status(400).json({ error: 'Nenhum dado v√°lido fornecido' });
    }
    
    const columns = Object.keys(filteredData).join(', ');
    const values = Object.values(filteredData);
    const placeholders = values.map((_, i) => `$${i + 1}`).join(', ');
    
    const result = await pool.query(
      `INSERT INTO ${tableName} (${columns}) VALUES (${placeholders}) RETURNING *`,
      values
    );
    
    res.status(201).json(result.rows[0]);
  } catch (error) {
    console.error(`Erro ao criar ${tableName}:`, error);
    res.status(500).json({ error: `Erro ao criar registro em ${tableName}`, details: error.message });
  }
};

// Fun√ß√£o gen√©rica para atualizar registro
const updateRecord = (tableName) => async (req, res) => {
  try {
    const { id } = req.params;
    const data = req.body;
    
    // Filtrar campos undefined, null e vazios
    const filteredData = Object.entries(data)
      .filter(([_, value]) => value !== undefined && value !== null && value !== '')
      .reduce((obj, [key, value]) => ({ ...obj, [key]: value }), {});
    
    if (Object.keys(filteredData).length === 0) {
      return res.status(400).json({ error: 'Nenhum dado v√°lido fornecido para atualiza√ß√£o' });
    }
    
    const setClause = Object.keys(filteredData)
      .map((key, i) => `${key} = $${i + 2}`)
      .join(', ');
    
    const values = [id, ...Object.values(filteredData)];
    
    const result = await pool.query(
      `UPDATE ${tableName} SET ${setClause}, updated_date = NOW() WHERE id = $1 RETURNING *`,
      values
    );
    
    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Registro n√£o encontrado' });
    }
    
    res.json(result.rows[0]);
  } catch (error) {
    console.error(`Erro ao atualizar ${tableName}:`, error);
    res.status(500).json({ error: `Erro ao atualizar registro em ${tableName}`, details: error.message });
  }
};

// Fun√ß√£o gen√©rica para deletar registro
const deleteRecord = (tableName) => async (req, res) => {
  try {
    const { id } = req.params;
    const result = await pool.query(`DELETE FROM ${tableName} WHERE id = $1 RETURNING *`, [id]);
    
    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Registro n√£o encontrado' });
    }
    
    res.json({ message: 'Registro deletado com sucesso' });
  } catch (error) {
    console.error(`Erro ao deletar ${tableName}:`, error);
    res.status(500).json({ error: `Erro ao deletar registro de ${tableName}` });
  }
};

